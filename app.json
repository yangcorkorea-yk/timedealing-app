{
  "expo": {
    "name": "timedealing-app",
    "slug": "timedealing-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,

    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },

    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.timedealing.app",
      "infoPlist": {
        "UIBackgroundModes": ["remote-notification"],
        "NSUserTrackingUsageDescription": "이 앱은 맞춤 알림 제공을 위해 알림 권한을 사용합니다.",
        "CFBundleURLTypes": [
          {
            "CFBundleURLSchemes": ["timedealing"]
          },
          {
            "CFBundleURLSchemes": ["kakaod6914396676906ad440f0d308ed139d1"]
          }
        ]
      }
    },

    "android": {
      "package": "com.timedealing.app",
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "permissions": [
        "INTERNET",
        "WAKE_LOCK",
        "VIBRATE",
        "RECEIVE_BOOT_COMPLETED",
        "FOREGROUND_SERVICE",
        "POST_NOTIFICATIONS"
      ],
      "useNextNotificationsApi": true,
      "edgeToEdgeEnabled": true,
      "intentFilters": [
        {
          "action": "VIEW",
          "data": [
            {
              "scheme": "timedealing",
              "host": "kakao-login"
            }
          ],
          "category": ["BROWSABLE", "DEFAULT"]
        },
        {
          "action": "VIEW",
          "data": [
            {
              "scheme": "kakaolink"
            }
          ],
          "category": ["BROWSABLE", "DEFAULT"]
        },
        {
          "action": "VIEW",
          "data": [
            {
              "scheme": "https"
            }
          ],
          "category": ["BROWSABLE", "DEFAULT"]
        }
      ]
    },

    "scheme": "timedealing",

    "web": {
      "favicon": "./assets/favicon.png"
    },

    "plugins": [
      "expo-router",
      "expo-secure-store",
      "expo-notifications",
      [
        "@react-native-seoul/kakao-login",
        {
          "kakaoAppKey": "d6914396676906ad440f0d308ed139d1"
        }
      ]
    ],

    "extra": {
      "eas": {
        "projectId": "c1ff80a7-1688-4042-8204-8f07131e8564"
      },
      "kakao": {
        "redirectUri": "timedealing://kakao-login",
        "nativeAppKey": "d6914396676906ad440f0d308ed139d1"
      }
    },

    "experiments": {
      "typedRoutes": true
    }
  }
}